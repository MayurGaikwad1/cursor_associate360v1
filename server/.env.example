# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/associate360
MONGODB_TEST_URI=mongodb://localhost:27017/associate360_test

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=7d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@company.com
EMAIL_PASS=your_email_password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# External API Configuration
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your_jira_username
JIRA_API_TOKEN=your_jira_api_token
JIRA_PROJECT_KEY=ASSOC360

# Asset Management Portal Integration
ASSET_PORTAL_URL=https://your-asset-portal.com/api
ASSET_PORTAL_API_KEY=your_asset_portal_api_key

# Batch Processing Configuration
BATCH_PROCESS_HOUR=2
BATCH_PROCESS_MINUTE=0

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100